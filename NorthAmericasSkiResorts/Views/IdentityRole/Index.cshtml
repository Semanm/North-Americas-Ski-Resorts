@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Add A Role To User";
}

<h2>Authorization Roles</h2>


<p>
    @Html.ActionLink("Create New Role","Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var role in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => role.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = role.Id }) |
            @Html.ActionLink("Details", "Details", new { id = role.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = role.Id }) 
        </td>
    </tr>
}

</table>

