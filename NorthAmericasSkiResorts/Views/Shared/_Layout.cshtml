<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="header">
        <div class="container">
            <div class="header">
                @Html.ActionLink("North America Ski Resorts", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="ski-resort-nav">@Html.ActionLink("Ski Resorts List", "Index", "SkiResort") </div>
        </div>
        <div class="banner">
            <img class="banner-img" src="~/Content/Images/pexels-photo-416821.jpeg" />
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
