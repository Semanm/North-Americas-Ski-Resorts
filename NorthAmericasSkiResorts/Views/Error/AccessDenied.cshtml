    ViewBag.Title = "AccessDenied";
}

<h2>Access Denied</h2>

<p>Warning: You are not authorized to access this area!</p>
<p>You will be redirected to the Home page in 5 seconds or <a class="access-denied-btn" href="@Url.Action("Index", "Home")">click here</a> now.</p>

